%h1 Sign up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal well' }) do |f|
  = f.error_notification
  = display_base_errors resource
  .form-group= f.input :name, required: true, autofocus: true,
    label_html: { class: 'col-lg-3'}, input_html: { class: 'form-control' }
  .form-group= f.input :email, required: true,
    label_html: { class: 'col-lg-3'}, input_html: { class: 'form-control' }
  .form-group= f.input :password, required: true,
    label_html: { class: 'col-lg-3'}, input_html: { class: 'form-control' }
  .form-group= f.input :password_confirmation, required: true,
    label_html: { class: 'col-lg-3'}, input_html: { class: 'form-control' }

  .form-actions.col-lg-offset-9= f.button :submit, 'Sign up', class: 'btn-primary'

=# render "devise/shared/links"
