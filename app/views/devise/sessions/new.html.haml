%h2 Sign in
= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal well' }) do |f|
  .form-group= f.input :email, :autofocus => true,
    label_html: { class: 'col-lg-3'}, input_html: { class: 'form-control' }
  .form-group= f.input :password,
    label_html: { class: 'col-lg-3'}, input_html: { class: 'form-control' }
  .form-group= f.input :remember_me, :as => :boolean,
    label_html: { class: 'col-lg-offset-3 col-lg-3'}, input_html: { class: 'col-lg-2' } if devise_mapping.rememberable?

  .form-actions.col-lg-offset-9= f.button :submit, 'Sign in', class: 'btn-default'
=# render "devise/shared/links"

