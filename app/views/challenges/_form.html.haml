= simple_form_for(@challenge, html: { class: 'form-horizontal well' }) do |f|
  = f.error_notification
  .form-group= f.input :name, :required => true, label_html: { class: 'col-lg-2'}, input_html: { class: 'form-control' }
  .form-group= f.input :desc, label_html: { class: 'col-lg-2'}, input_html: { class: 'form-control', rows: 5 }
  .form-group= f.association :user, label_html: { class: 'col-lg-2'}
  .form-group= f.input :challenge_file, label_html: { class: 'col-lg-3'}, input_html: { class: 'col-lg-6' }

  .form-actions.col-lg-offset-9= f.button :submit
