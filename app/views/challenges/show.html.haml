.panel.panel-info.challenge-extra-info
  .panel-heading
    %h1= @challenge.name

  .panel-body
    .challenge-desc= @challenge.desc

    - if @challenge.challenge_file.present?
      %br
      %p
        %b Challenge file:
        = link_to @challenge.challenge_file_file_name, @challenge.challenge_file.url

  .panel-footer
    %p.text-left
      %b Author:
      = @challenge.user.name
    %p.text-left
      %b Date:
      = "@challenge.date"
    %p.text-left
      %b Closed:
      = "@challenge.closed"

- if current_user
  - if owner_of_challenge? @challenge
    .pull-right
      = link_to 'Edit', edit_challenge_path(@challenge), class: "btn btn-primary"
  - elsif solution = @challenge.user_solution(current_user)
    #challenge_solution
      = render 'solutions/show', solution: solution
  - else
    #challenge_solution
      = render 'add_solution', challenge_id: @challenge.id
